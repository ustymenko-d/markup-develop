mixin Header({ jsDisabled })
	include ./components/Navigation/Navigation.pug

	-
		const baseClass = [
			'w-full py-4 text-white header lg:py-8',
			jsDisabled ? 'relative' : 'fixed z-10 transition-transform duration-500 lock-padding'
		].join(' ')


	header#header(class=baseClass)
		div(class="flex items-center justify-between px-4 mx-auto md:container lg:px-5 flex-nowrap")
			a(href="#" class="text-2xl font-medium tracking-widest uppercase header__logo xl:text-3xl") Minders

			+Navigation({ jsDisabled })