include ../AnimatedTag.pug

-
	const linkClasses = [
		'inline-block py-2 px-3.5 sm:px-6 duration-150',
		'hover:bg-[var(--accent)]',
		'focus-visible:bg-[var(--accent)]',
		'active:bg-[var(--green)] active:text-[var(--accent)]'
	]

	const navLinks = [
		{ label: 'About', href: '#about' },
		{ label: 'Recipes', href: '#recipes' },
		{ label: 'Pricing', href: '#pricing' },
		{ label: 'Blog', href: '#blog' }
	]

+AnimatedTag('nav', {
	class: 'max-w-full px-4 sm:px-10 py-1 mx-auto bg-white rounded-full shadow-xs w-fit',
	data: {
		'data-animated': true,
		'data-effect-slide-down': true,
		'data-delay': 100
	}
})

	ul(class="flex items-center justify-between gap-2 overflow-x-auto sm:gap-6 lg:gap-8")

		each link in navLinks

			li.rounded-full.overflow-hidden.shrink-0

				a(href=link.href class=linkClasses)= link.label