mixin InfoBlock(info, images)

	div(class="grid grid-rows-3 gap-14")

		each item, idx in info
			-
				const { title, text } = item
				const img = images[idx]

			div(class=`flex gap-10 text-[var(--green)] flex-col xl:max-w-11/12 2xl:max-w-4/5 ${idx === 1 ? 'sm:flex-row-reverse xl:ml-auto' : 'sm:flex-row'}`)

				div(class="max-sm:text-center sm:basis-11/12 lg:basis-2/3 sm:flex sm:flex-col sm:justify-center lg:text-center lg:items-center lg:gap-4")

					span(class="font-(family-name:--second-font) text-6xl")= `0${idx + 1}`

					h3(class="mb-10 lg:mb-6")= title

					p(
						class="leading-tight max-lg:max-w-4/5 lg:max-w-10/12 max-sm:mx-auto text-balance sm:max-w-full"
					)= text

				picture

					source(
						media="(max-width: 639px)"
						srcset=`${img.src + '-nojs'}.webp 1x, ${img.src + '-nojs'}@x2.webp 2x`
						type="image/webp"
					)
					source(
						media="(max-width: 639px)"
						srcset=`${img.src + '-nojs'}.jpg 1x, ${img.src + '-nojs'}@x2.jpg 2x`
						type="image/jpg"
					)

					source(
						media="(max-width: 767px)"
						srcset=`${img.src + '-nojs'}@sm.webp 1x, ${img.src + '-nojs'}@sm@x2.webp 2x`
						type="image/webp"
					)
					source(
						media="(max-width: 767px)"
						srcset=`${img.src + '-nojs'}@sm.jpg 1x, ${img.src + '-nojs'}@sm@x2.jpg 2x`
						type="image/jpg"
					)

					source(
						media="(max-width: 1023px)"
						srcset=`${img.src + '-nojs'}@md.webp 1x, ${img.src + '-nojs'}@md@x2.webp 2x`
						type="image/webp"
					)
					source(
						media="(max-width: 1023px)"
						srcset=`${img.src + '-nojs'}@md.jpg 1x, ${img.src + '-nojs'}@md@x2.jpg 2x`
						type="image/jpg"
					)

					source(
						media="(max-width: 1279px)"
						srcset=`${img.src + '-nojs'}@lg.webp 1x, ${img.src + '-nojs'}@lg@x2.webp 2x`
						type="image/webp"
					)
					source(
						media="(max-width: 1279px)"
						srcset=`${img.src + '-nojs'}@lg.jpg 1x, ${img.src + '-nojs'}@lg@x2.jpg 2x`
						type="image/jpg"
					)

					source(
						media="(max-width: 1535px)"
						srcset=`${img.src + '-nojs'}@xl.webp 1x, ${img.src + '-nojs'}@xl@x2.webp 2x`
						type="image/webp"
					)
					source(
						media="(max-width: 1535px)"
						srcset=`${img.src + '-nojs'}@xl.jpg 1x, ${img.src + '-nojs'}@xl@x2.jpg 2x`
						type="image/jpg"
					)

					source(
						srcset=`${img.src + '-nojs'}@2xl.webp 1x, ${img.src + '-nojs'}@2xl@x2.webp 2x`
						type="image/webp"
					)
					img(
						src=`${img.src + '-nojs'}@2xl.jpg`
						srcset=`${img.src + '-nojs'}@2xl@x2.jpg 2x`
						alt=img.alt
						width="451"
						height="675"
						class="block overflow-hidden shadow-md max-sm:aspect-square rounded-4xl max-sm:w-full sm:h-full"
					)