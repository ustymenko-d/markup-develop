
mixin Head({jsDisabled})
	- title= "MINDERS - Discover the endless possibilitis of creativity"
	- description= "The project was created using the BEM methodology for structured and maintainable CSS, enhancing readability and scalability. It adapts fluidly to different devices and screen sizes, ensuring accessibility for all users. The page works even without JS and optimized for quick load times and smooth rendering, providing an efficient user experience."

	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="author" content="ustymenko.denys@gmail.com")
		meta(name="description" content=description)
		meta(property="og:url" content="https://minders-page.netlify.app/")
		meta(property="og:type" content="website")
		meta(property="og:title" content=title)
		meta(property="og:description" content=description)
		meta(property="og:image" content="img/icons/favicon.svg")

		title= title

		link(rel="icon" href="img/icons/favicon.svg" type="image/x-icon")
		link(rel="stylesheet" href="css/style.min.css")
		//- link(rel="stylesheet" href="files/tailwind/build.css")
		script(src="https://cdn.tailwindcss.com")

		if !jsDisabled 
			noscript
				meta(http-equiv="refresh" content="0; url=no-js.html") 
			//- link( rel="stylesheet" href="css/no-js.min.css")
			script(src="js/index.min.js", defer)