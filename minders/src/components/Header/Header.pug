mixin Header({ jsDisabled })
	-
		const navLinks = [
			{name: "About us", href: "#about"},
			{name: "Our team", href: "#team"},
			{name: "Events", href: "#events"},
			{name: "Join us", href: "#application"}
		]
		const headerBase = "header py-4 lg:py-8 w-full "
		const headerClasses = !jsDisabled ? headerBase + " fixed z-10 transition-transform duration-500 lock-padding" : headerBase + "relative"

	header#header(class=headerClasses)
		div(class="md:container mx-auto px-4 lg:px-5 flex items-center justify-between flex-nowrap")
			a(href="#" class="header__logo uppercase text-2xl	 tracking-widest xl:text-3xl") Minders

			include ./components/Navigation/Navigation.pug
			+Navigation({jsDisabled})