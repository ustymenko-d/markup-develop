mixin Button({text, outline = false, icon = false, color = 'white'})
	-
		const baseClasses = [
			'py-[18px] px-10 rounded-[50px] border-2 font-(family-name:var--first-font) text-xl/7 duration-150',
			'not-disabled:cursor-pointer',
			'active:scale-95 active:brightness-80'
		]

		const outlineClass = outline ? 'border-[var(--green)]' : 'border-transparent'

		const iconClass = (text && icon) ? 'flex items-center gap-2' : ''

		const colorMap = {
			green: [
				'bg-[var(--green)] text-white',
				'hover:bg-[var(--accent)] hover:text-[var(--green)]',
				'focus-visible:bg-[var(--accent)] focus-visible:text-[var(--green)]'
			],
			accent: [
				'bg-[var(--accent)]',
				'hover:bg-[var(--green)] hover:text-white',
				'focus-visible:bg-[var(--green)] focus-visible:text-white',
				'active:bg-[var(--green)] active:text-white'
			],
			white: [
				'hover:bg-[var(--green)] hover:text-white',
				'focus-visible:bg-[var(--green)] focus-visible:text-white',
				'active:bg-[var(--green)] active:text-white'
			]
		}

		const classes = [
			...baseClasses,
			outlineClass,
			iconClass,
			...colorMap[color]
		].join(' ')

	button(class=classes)= text

		if icon
			svg(width="20" height="17" viewBox="0 0 20 17" fill="none" xmlns="http://www.w3.org/2000/svg")

				path(
					d="M19.1953 9.73828L12.3203 16.6133C12.0625 16.8711 11.7188 17 11.375 17C10.9883 17 10.6445 16.8711 10.3867 16.6133C9.82813 16.0977 9.82813 15.1953 10.3867 14.6797L14.8984 10.125L1.75 10.125C0.976563 10.125 0.375 9.52344 0.375 8.75C0.375 8.01953 0.976563 7.375 1.75 7.375L14.8984 7.375L10.3867 2.86328C9.82813 2.34766 9.82812 1.44531 10.3867 0.929687C10.9023 0.371094 11.8047 0.371094 12.3203 0.929687L19.1953 7.80469C19.7539 8.32031 19.7539 9.22266 19.1953 9.73828Z"
					fill="currentColor"
				)
