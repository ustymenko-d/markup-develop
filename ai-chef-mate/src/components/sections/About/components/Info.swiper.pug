mixin InfoSwiper()
	include ../../../Button.pug

	-
		const infoSlides = [
			{
				title: 'Personalize Your Profile',
				text: 'Begin by creating your profile. Tell us about your dietary preferences, nutritional goals, and budget. Our AI technology tailors every meal plan to fit your unique needs.'
			},
			{
				title: 'Choose Your Meals',
				text: 'Browse a curated selection of delicious, AI-recommended meals tailored to your preferences. Filter by ingredients, cuisine, cooking time, or dietary needs â€” and select what suits your taste and lifestyle.'
			},
			{
				title: 'Get Your Plan & Groceries',
				text: 'Receive your personalized weekly meal plan and an auto-generated grocery list. Sync with your calendar or grocery delivery service to stay organized without lifting a finger.'
			}
		]


	#info-swiper.swiper

		.swiper-wrapper

			each slide, idx in infoSlides
				- const { title, text } = slide

				.swiper-slide

					div(class="text-[var(--green)]")

						span(class="font-(family-name:--second-font) text-6xl")= `0${idx + 1}`

						h3.mb-10= title

						p(class="leading-tight max-lg:max-w-4/5 lg:max-w-10/12 max-lg:mx-auto text-balance")= text

		.pt-10.mb-10.flex.items-center.gap-4(class="max-lg:justify-center lg:pt-20 lg:mb-20")

			+Button({
				outline: true,
				icon: true,
				classes: 'swiper-button-prev rotate-180'
			})

			+Button({
				outline: true,
				icon: true,
				classes: 'swiper-button-next'
			})

		.swiper-pagination.swiper-pagination-custom(class="font-(family-name:--second-font) text-4xl text-[var(--green)]")