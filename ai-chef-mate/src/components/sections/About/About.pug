	div(class="container mx-auto wrapper")

		+Heading({
			title: 'How it works',
			subtitle: 'Step into the world of hassle-free meal planning with our easy 3-step process',
			bgColor: true
		})

		if !jsDisabled

			div(class="lg:grid lg:grid-cols-2 lg:gap-x-10 lg:items-center")

				div(class="max-lg:mb-20 max-lg:text-center")

					+InfoSwiper(info)

				div(class="mx-auto max-w-4/6")

					+ImagesSwiper(images)

		else

			+InfoBlock(info, images)