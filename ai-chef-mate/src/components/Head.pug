mixin Head()
	-
		const title= "AI Chef Mate - Effortless Planning, Healthier Eating"
		const description = "This landing page is built with JavaScript, Pug, and Tailwind CSS, featuring smooth scrolling via Lenis, sliders powered by Swiper.js, and a streamlined build process with Gulp.js."


	head

		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="author" content="ustymenko.denys@outlook.com")
		meta(name="description" content=description)

		link(rel="icon" href="img/icons/favicon.svg" type="image/x-icon")
		link(rel="stylesheet" href="css/index.css")

		title= title

		script(src="js/index.min.js", defer)
