include components/Card.pug
include components/Actions.pug
include components/Image.pug

section(class="px-2 sm:px-4 pt-20 sm:pt-10 pb-16 sm:pb-28 wrapper wrapper_right wrapper_bottom bg-[var(--light)]")

	div(class="container flex flex-col gap-20 mx-auto md:gap-24")

		header.container.mx-auto

			include ../../Navigation/Navigation.desktop.pug

		div.flex.flex-col.gap-11

			h1.text-center Elevate Your Mealtime with AI&#8209;Powered Personalization

			div(class="grid grid-cols-2 lg:grid-cols-(--hero-grid-cols-lg) grid-rows-(--hero-grid-rows) lg:grid-rows-(--hero-grid-rows-lg) gap-x-4 sm:gap-x-8 gap-y-8 sm:gap-y-16 lg:gap-4 xl:gap-8")

				+Card({percent: 95, text: 'Improved Nutrition', img: {src: 'img/bag-green.jpg', alt: 'A hand holding a green bag of vegetables'}, classes: 'mb-8 sm:mb-16 lg:mb-0 pt-5 sm:pt-6 lg:pt-4 lg:row-span-2'})

				+Image({img: {src: 'img/ramen.jpg', alt: 'Ramen'}, classes: 'mt-auto lg:row-start-2 lg:row-span-2 lg:col-start-2 lg:self-end'})

				span(class="col-span-2 lg:col-span-3 lg:col-start-2 lg:row-start-1 text-center text-2xl md:text-3xl font-(family-name:--first-font) lg:mb-8 2xl:mb-10 text-[var(--green)]") Effortless&nbsp;Planning, Healthier&nbsp;Eating

				+Actions({classes: 'col-span-2 lg:col-span-1 lg:row-start-2 lg:row-span-2 lg:col-start-3'})

				+Card({percent: 25, text: 'Saved on Groceries', img: {src: 'img/bag-white.jpg', alt: 'White shopper with products'}, reverse: true, classes: 'order-1 pb-5 sm:pb-6 lg:pb-4 mt-8 sm:mt-16 lg:mt-0 lg:row-start-2 lg:row-span-2 lg:col-start-4 lg:self-end'})

				+Image({img: {src: 'img/roots.jpg',alt: 'The hand that holds the plant with the roots'}, classes: 'mb-auto lg:order-2 lg:row-start-1 lg:row-span-2 lg:col-start-5'})