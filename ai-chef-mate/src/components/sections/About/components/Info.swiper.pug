mixin InfoSwiper(infoSlides)
	include ../../../Button.pug


	#info-swiper.swiper

		.swiper-wrapper

			each slide, idx in infoSlides
				- const { title, text } = slide

				.swiper-slide

					div(class="text-[var(--green)]")

						span(class="font-(family-name:--second-font) text-6xl")= `0${idx + 1}`

						h3.mb-10= title

						+AnimatedTag('p', {
							class: 'leading-tight max-lg:max-w-4/5 lg:max-w-10/12 max-lg:mx-auto text-balance',
							data: {
								'data-animated': true,
								'data-effect-slide-right': true,
								'data-delay': 100
							}
						})= text

		.pt-10.mb-10.flex.items-center.gap-4(class="max-lg:justify-center lg:pt-20 lg:mb-20")

			+Button({
				outline: true,
				icon: true,
				classes: 'swiper-button-prev rotate-180'
			})

			+Button({
				outline: true,
				icon: true,
				classes: 'swiper-button-next'
			})

		.swiper-pagination.swiper-pagination-custom(class="font-(family-name:--second-font) text-4xl text-[var(--green)]")