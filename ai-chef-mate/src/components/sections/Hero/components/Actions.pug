mixin Actions({ classes = '' })

	include ../../../Button.pug

	-
		const wrapper = [
			'flex flex-col justify-between gap-4 sm:flex-row lg:flex-col',
			classes
		].join(' ')

	div(class=wrapper)

		div(class="flex flex-col gap-4 grow lg:grow-0 lg:items-center")

			+Button({
				text: 'Try Our Demo',
				outline: true
			})

			+Button({
				text: 'Start For Free',
				color: 'accent'
			})

		div(class="py-4 px-8 bg-[var(--green)] rounded-4xl text-[var(--accent)] text-center lg:py-6 xl:py-8 lg:px-10 xl:px-16 flex gap-1 justify-center items-center flex-col")

			span(class="leading-none text-[clamp(2.125rem,1.3999rem+3.0939vw,3.875rem)] font-(family-name:--second-font)") 30 000 +

			span(class="text-base sm:text-lg font-(family-name:--first-font)") Happy Users