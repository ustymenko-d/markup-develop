include ../../AnimatedTag.pug

section.hero.mb-16

	div(class=`${jsDisabled ? "pt-16 md:pt-10" : "pt-24 lg:pt-28"}`)

		div(class="px-4 mx-auto md:container lg:px-5")

			h1.hero__title(class="mb-10 text-center text-white title sm:text-5xl lg:mb-12 lg:text-7xl xl:text-8xl" )

				+AnimatedTag('span', {
					class: 'text-white-op5',
					data: {
						'data-animated': true,
						'data-effect-vanishIn': true
					}
				})= 'Discover the endless'

				+AnimatedTag('span', {
					class: 'block',
					data: {
						'data-animated': true,
						'data-effect-slideUp': true,
						'data-delay': 600
					}
				})= 'possibilities of creativity'

			+AnimatedTag('div', {
				class: 'hero__image relative flex w-full overflow-hidden min-h-96 sm:aspect-video rounded-extra xl:rounded-full-xl',
				data: {
					'data-animated': true,
					'data-effect-slideUp-small': true,
					'data-delay': 800,
					'data-parallax': true
				}
			})

				+AnimatedTag('picture', {
					class: 'w-full',
					data: {
						'data-animated': true,
						'data-effect-slideUp-small': true,
						'data-delay': 900,
						'data-parallax-layer': true,
						'data-parallax-coef': 80,
						'data-parallax-inverted': true
					}
				})

					source(
						media="(max-width: 639px)"
						srcset="../img/hero/symmetry-abstract.webp 1x, ../img/hero/symmetry-abstract@X2.webp 2x" type="image/webp"
					)
					source(
						media="(max-width: 639px)"
						srcset="../img/hero/symmetry-abstract.png 1x, ../img/hero/symmetry-abstract@X2.png 2x"
						type="image/png"
					)

					source(
						media="(max-width: 767px)"
						srcset="../img/hero/symmetry-abstract@sm.webp 1x, ../img/hero/symmetry-abstract@sm@X2.webp 2x"
						type="image/webp"
					)
					source(
						media="(max-width: 767px)"
						srcset="../img/hero/symmetry-abstract@sm.png 1x, ../img/hero/symmetry-abstract@sm@X2.png 2x"
						type="image/png"
					)

					source(
						media="(max-width: 1023px)"
						srcset="../img/hero/symmetry-abstract@md.webp 1x, ../img/hero/symmetry-abstract@md@X2.webp 2x"
						type="image/webp"
					)
					source(
						media="(max-width: 1023px)"
						srcset="../img/hero/symmetry-abstract@md.png 1x, ../img/hero/symmetry-abstract@md@X2.png 2x"
						type="image/png"
					)

					source(
						media="(max-width: 1279px)"
						srcset="../img/hero/symmetry-abstract@lg.webp 1x, ../img/hero/symmetry-abstract@lg@X2.webp 2x"
						type="image/webp"
					)
					source(
						media="(max-width: 1279px)"
						srcset="../img/hero/symmetry-abstract@lg.png 1x, ../img/hero/symmetry-abstract@lg@X2.png 2x"
						type="image/png"
					)

					source(
						media="(max-width: 1535px)"
						srcset="../img/hero/symmetry-abstract@xl.webp 1x, ../img/hero/symmetry-abstract@xl@X2.webp 2x"
						type="image/webp"
					)
					source(
						media="(max-width: 1535px)"
						srcset="../img/hero/symmetry-abstract@xl.png 1x, ../img/hero/symmetry-abstract@xl@X2.png 2x"
						type="image/png"
					)

					source(
						srcset="../img/hero/symmetry-abstract@2xl.webp 1x, ../img/hero/symmetry-abstract@xl@X2.webp 2x"
						type="image/webp"
					)
					img(
						class="object-cover w-full h-full"
						src="../img/hero/symmetry-abstract@2xl.png"
						srcset="../img/hero/symmetry-abstract@2xl@X2.png 2x"
						width="1436"
						height="841"
						alt="Fractal abstract bagel"
					)