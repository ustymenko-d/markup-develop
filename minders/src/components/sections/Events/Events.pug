section#events.mb-24.pt-8

	div(class="px-4 mx-auto md:container lg:px-5")

		h2(class="text-white title mb-9 lg:mb-10 sm:text-center lg:text-left")

			+AnimatedTag('span', {
				class: 'text-white-op5',
				data: {
					'data-animated': true,
					'data-effect-vanishIn': true
				}
			})= 'Keep up to date'

			+AnimatedTag('span', {
				class: 'block',
				data: {
					'data-animated': true,
					'data-effect-slideUp': true,
					'data-delay': 600
				}
			})= 'with our latest events'

		include ./components/List.pug

		a(href="#" class="block w-full text-center button bg-purple sm:sm:w-fit sm:mx-auto lg:m-0 active:scale-95")

			span.button__text.inline-block
				| View&nbsp;calendar